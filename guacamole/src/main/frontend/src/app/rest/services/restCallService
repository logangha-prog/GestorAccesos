/**
 * A service for executing REST API calls with consistent error handling.
 */
angular.module('rest').factory('restCallService', ['$injector',
    function restCallService($injector) {

    // Required services
    var $q = $injector.get('$q');
    var requestService = $injector.get('requestService');
    var Error = $injector.get('Error');

    var service = {};

    /**
     * Executes a REST API call through the provided function,
     * handling errors consistently across the application.
     */
    service.execute = function execute(fn) {
        var deferred = $q.defer();
        var args = Array.prototype.slice.call(arguments, 1);
        
        fn.apply(this, args)
        .then(function(data) {
            deferred.resolve(data);
        }, requestService.createErrorCallback(function(error) {
            if (error.type === Error.Type.NOT_FOUND) {
                deferred.resolve(null);
            } else {
                deferred.reject(error);
            }
        }));
        
        return deferred.promise;
    };

    return service;
}]);